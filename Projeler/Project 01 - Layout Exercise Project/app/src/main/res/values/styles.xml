<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="EntryTitleStyle">
        <item name="android:fontFamily">@font/acme</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">#2C2B47</item>
        <item name="android:textSize">@dimen/entry_title_size</item>
    </style>

    <style name="HomeSubTitleStyle">
        <item name="android:fontFamily">@font/acme</item>
        <item name="android:textColor">#B9B8C6</item>
        <item name="android:textSize">17sp</item>
    </style>

    <style name="StartInputStyle">
        <item name="android:background">@drawable/ic_start_input_background</item>
        <item name="android:fontFamily">@font/acme</item>
        <item name="android:paddingLeft">20dp</item>
        <item name="android:textColorHint">#2C2B47</item>
    </style>

    <style name="PremiumPaymentTextStyle">
        <item name="android:background">@drawable/ic_premium_textview_background</item>
        <item name="android:fontFamily">@font/acme</item>
        <item name="android:paddingTop">20dp</item>
        <item name="android:paddingLeft">20dp</item>
        <item name="android:textSize">15sp</item>
    </style>

    <style name="PremiumMonthYearTitleStyle">
        <item name="android:fontFamily">@font/acme</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:textSize">10dp</item>
    </style>

    <style name="ButtonStyle">
        <item name="android:background">@drawable/roundstyle</item>
        <item name="android:backgroundTint">#2C2B47</item>
        <item name="android:fontFamily">@font/acme</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">18dp</item>
    </style>


</resources>